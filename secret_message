# Восстанавление файла на локальном хранилище 
zfs receive otus/storage@task2 < otus_task2.file

# Востановление со Snapshot'a
zfs rollback otus/storage@task2

# путь до secret_message
ls /otus/storage/task1/file_mess | grep secret_message

